<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SlideView">
        <attr name="widthScale" format="integer" />
        <attr name="heightScale" format="integer" />
        <attr name="intervalTime" format="integer" />
        <attr name="dotFocus" format="reference" />
        <attr name="dotNormal" format="reference" />
        <attr name="placeHolderImage" format="reference" />
        <attr name="textBackground" format="color" />
        <attr name="textColor"  />
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="pullView_position">
            <enum name="first" value="1" />
            <enum name="second" value="2" />
        </attr>
        <attr name="spring">
            <enum name="all" value="1" />
            <enum name="down" value="2" />
            <enum name="up" value="3" />
        </attr>
    </declare-styleable>

    <attr name="tip_init" format="string" />
    <attr name="tip_prepare" format="string" />
    <attr name="tip_loading" format="string" />
    <attr name="tip_finish" format="string" />
    <attr name="arrows_up" format="reference" />
    <attr name="arrows_down" format="reference" />
    <attr name="textColor" />

    <declare-styleable name="FooterLayout">
        <attr name="tip_init" />
        <attr name="tip_prepare" />
        <attr name="tip_loading" />
        <attr name="tip_finish" />
        <attr name="arrows_up" />
        <attr name="arrows_down" />
    </declare-styleable>

    <declare-styleable name="HeaderLayout">
        <attr name="tip_init" />
        <attr name="tip_prepare" />
        <attr name="tip_loading" />
        <attr name="tip_finish" />
        <attr name="arrows_up" />
        <attr name="arrows_down" />
    </declare-styleable>

    <declare-styleable name="TabLayout">
        <attr name="horizontal_space" format="dimension" />
        <attr name="vertical_space" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TimeAxisView">
        <attr name="textSize" format="float" />
        <attr name="count" format="integer" />
        <attr name="radius" format="integer" />
        <attr name="circlePadding" format="integer" />
        <attr name="strokeWidth" format="integer" />
        <attr name="interval" format="integer" />
        <attr name="lineStrokeWidth" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="textColor"/>
        <attr name="orientation">
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewPageIndicator">
        <attr name="tab_count" format="integer" />
        <attr name="select_color" format="color" />
        <attr name="normal_color" format="color" />
    </declare-styleable>

</resources>